@using NoodStore.Models
@model List<Giohang>
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_LayoutStandar.cshtml";
}
<br />
<h1 style="text-align:center;font-weight:bold">THÔNG TIN GIỎ HÀNG</h1>
<br />
<table align="center"  style="border:1px solid">
    <tr style="text-align:center; font-weight:bold;border:1px solid">
        <td style="border:1px solid"> Ảnh sản phẩm </td>
        <td style="width:auto;height:auto;margin:0 5px 0 5px"> Tên sản phẩm </td>
        <td style="border:1px solid"> Số lượng </td>
        <td width="120px"  style="border:1px solid"> Đơn giá </td>
        <td width="120px"  style="border:1px solid"> Thành tiền </td>
    </tr>
    @foreach (var item in Model)
    {
    <tr style="text-align:center; font-weight:bold;width:auto;height:auto;border:1px solid">
       <td style="border:1px solid"><p><img src="~/Hinhsanpham/@item.sAnhSP" width="180"  /></p></td>
        <td style="border:1px solid"><p>@item.sTenSP</p></td>


        @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { @sMaSp = item.sMaSP }))
    {
        <td style="border:1px solid">
            <input type="number" min="1" name="txtSL" value="@item.iSoluong" style="background-color:yellow" />
        </td>

        <td style="border:1px solid">@String.Format("{0:0,0}", @item.dGiaSP) <b>đ</b></td>
        <td style="border:1px solid">@String.Format("{0:0,0}", @item.dThanhtien)<b>đ</b></td>
        <td style="border:1px solid"> <a href="@Url.Action("Details", "Home", new { id = item.sMaSP })"> Chi tiết </a></td>
        <td style="border:1px solid"> @Html.ActionLink("Xóa", "XoaGiohang", new { @iMaSp = item.sMaSP })</td>
        <td> <button type="submit">Cập nhật</button></td>
}
    </tr>
    }
    <tr style="font-weight:bold; text-align:right; color:red"> 
        <td colspan="3">Số lượng sản phẩm: @ViewBag.TongSL</td>
        <td colspan="5">Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VND</td>
    </tr>
    <tr style="font-weight:bold; color:blue; text-align:right">
        <td colspan="8">@Html.ActionLink("Xóa giỏ hàng", "XoatatcaGiohang")</td>
    </tr>
    <tr style="font-weight:bold; text-align:right; color:blue">
        <td colspan="8" align="center">
            @Html.ActionLink("ĐẶT HÀNG", "DatHang", "Giohang")
        </td>
    </tr>
</table>
   

