@using NoodStore.Models
@using PagedList.Mvc;
@model PagedList.PagedList<NoodStore.Models.SANPHAM>
@{
    /**/

    ViewBag.Title = "Sanpham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>QUẢN LÝ THÔNG TIN SẢN PHẨM</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="clearfix"></div>
<table class="table table-bordered" style="margin-top: 20px; text-align: center;  font-family: Tahoma;">
    <tr class="bg-info" style="color: black;">
        <th style=" text-align:left;">
            <strong>Tên Sản Phẩm</strong>
        </th>
        <th>
            <strong>Giá Bán</strong>
        </th>
        <th>
            <strong>Ảnh</strong>
        </th>
        <th>
            <strong>Nhà Sản Xuất</strong>
        </th>
        <th>
            <strong>Loại Sản Phẩm</strong>
        </th>
        <th>
            <strong>Kiểu Sản Phẩm</strong> 
        </th>
        <th>
            <strong>Ngày Cập Nhật</strong>
        </th>
        <th>
            <strong>Số Lượng Tồn</strong>
        </th>
        <th> Edit | Details | Delete </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align: center; font-family: Tahoma;">
            <th style=" text-align:left;">
                @Html.DisplayFor(modelItem => item.TenSP)
            </th>
            <th>
                    @String.Format("{0:0,0}", item.GiaSP)
                </th>
            <th>
                <img src="@Url.Content("~/Hinhsanpham/"+item.AnhSP )" height="100px" width="100px"/>
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.MaNSX)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.MaLSP)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.MaKieu)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.NgayNhapSP)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Soluongton)
            </th>
            <th>
                @Html.ActionLink("Edit", "SP_Edit", new { id = item.MaSP }) | @Html.ActionLink("Details", "Details", new { id = item.MaSP }) | @Html.ActionLink("Delete", "Delete", new { id = item.MaSP })
            </th>
        </tr>
    }
</table>
Trang@(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount;
<div class="MenuPage">
    @Html.PagedListPager(Model, Page => Url.Action("Sanpham", new { page = Page }))
</div>
<style>
    .MenuTrang li {
        display: inline;
    }
</style>


