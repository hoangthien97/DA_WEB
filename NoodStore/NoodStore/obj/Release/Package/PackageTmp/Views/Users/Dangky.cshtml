@{
    ViewBag.Title = "Đăng Ký";
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
}


<table align="center">
    <h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Họ khách hàng:</td>
            <td>
                @Html.TextBox("Ho")
                @ViewData["loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Tên khách hàng:</td>
            <td>
                @Html.TextBox("Ten")
                @ViewData["loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Tên đăng nhập:</td>
            <td>
                @Html.TextBox("Taikhoan")
                @ViewData["loi3"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu:</td>
            <td>
                @Html.Password("MK")
                @ViewData["loi4"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Email:</td>
            <td>
                @Html.TextBox("Email")
                @ViewData["loi5"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Điện thoại:</td>
            <td>
                @Html.TextBox("DienthoaiKH")
                @ViewData["loi6"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Ngày sinh:</td>
            <td>
                <input type="date" name="Ngaysinh" />
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" value="Đăng ký" />
            </td>
        </tr>
    }
</table>



